<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.movieshare.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.movieshare.fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.movieshare.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_userCommentListFragment"
            app:destination="@id/userCommentListFragment" />
    </fragment>
    <fragment
        android:id="@+id/userCommentListFragment"
        android:name="com.example.movieshare.fragments.UserCommentListFragment"
        android:label="fragment_user_comment_list"
        tools:layout="@layout/fragment_user_comment_list" >
        <action
            android:id="@+id/action_userCommentListFragment_to_userCommentEditionFragment"
            app:destination="@id/userCommentEditionFragment" />
    </fragment>
    <fragment
        android:id="@+id/userCommentEditionFragment"
        android:name="com.example.movieshare.fragments.UserCommentEditionFragment"
        android:label="fragment_user_comment_edition"
        tools:layout="@layout/fragment_user_comment_edition" >
        <argument
            android:name="movieCommentPosition"
            app:argType="integer" />
    </fragment>
</navigation>