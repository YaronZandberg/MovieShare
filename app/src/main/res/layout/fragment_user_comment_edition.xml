<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.user.UserCommentEditionFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_comment_edition_fragment_movie_name_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_comment_edition_fragment_movie_name_input_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Movie name" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_comment_edition_fragment_movie_rating_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_comment_edition_fragment_movie_name_input_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_comment_edition_fragment_movie_rating_input_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Movie rating" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_comment_edition_fragment_movie_comment_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_comment_edition_fragment_movie_rating_input_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_comment_edition_fragment_movie_comment_input_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comment" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/user_comment_edition_fragment_save_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#3164F4"
        android:text="Save"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_comment_edition_fragment_delete_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/user_comment_edition_fragment_delete_btn"
        app:layout_constraintTop_toTopOf="@+id/user_comment_edition_fragment_delete_btn" />

    <Button
        android:id="@+id/user_comment_edition_fragment_delete_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#3164F4"
        android:text="Delete"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_comment_edition_fragment_cancel_btn"
        app:layout_constraintEnd_toStartOf="@+id/user_comment_edition_fragment_save_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/user_comment_edition_fragment_cancel_btn"
        app:layout_constraintTop_toTopOf="@+id/user_comment_edition_fragment_cancel_btn" />

    <Button
        android:id="@+id/user_comment_edition_fragment_cancel_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#3164F4"
        android:text="Cancel"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/user_comment_edition_fragment_delete_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_comment_edition_fragment_movie_comment_input_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>