<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_width="120dp"
    android:layout_height="170dp">

    <ImageView
        android:id="@+id/item_list_row_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_movie_filter_24" />

    <TextView
        android:id="@+id/item_list_row_name_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/item_list_row_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_list_row_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_list_row_rating_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/item_list_row_name_tv"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:id="@+id/item_list_row_comment_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_list_row_img"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/item_list_row_img" />
</androidx.constraintlayout.widget.ConstraintLayout>